{
  "name": "blog-project-refactoring",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint:fix": "eslint --fix ./src/**/*.{js,jsx,ts,tsx}",
    "prettier:fix": "npx eslint-config-prettier ./src/**/*.{js,jsx,ts,tsx}",
